{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/**/*", "examples/**/*", "src/node_modules"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "/src/*": ["src/*"],
      "/examples/*": ["examples/*"]
    },
    "module": "esnext",
    "moduleResolution": "node"
  }
}
